\begin_layout Standard
\begin_inset Formula $\widehat{\sigma}^{2}=\frac{1}{n}\sum_{i=1}\widehat{\epsilon}^{2}$
\end_inset

, 
\begin_inset Formula $E\left[x_{i}x_{i}'\right]=\frac{1}{n}X'X$
\end_inset


\end_layout

\begin_layout Standard
Under heteroskedasticity
\begin_inset Formula 
\[
\sqrt{n}\left(\widehat{\beta}-\beta_{0}\right)\stackrel{d}{\to}N\left(0,E\left[x_{i}x_{i}'\right]^{-1}\mbox{var}\left(x_{i}\epsilon_{i}\right)E\left[x_{i}x_{i}'\right]^{-1}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\mbox{var}\left(x_{i}\epsilon_{i}\right)$
\end_inset

 is estimated with 
\begin_inset Formula 
\[
\frac{1}{n}\sum_{i=1}^{n}x_{i}x_{i}'\widehat{\epsilon}_{i}^{2}
\]

\end_inset

An alternative expression is
\begin_inset Formula 
\[
\frac{1}{n}\sum_{i=1}^{n}x_{i}x_{i}'\widehat{\epsilon}_{i}^{2}=\frac{1}{n}X'DX=\frac{1}{n}\left(X'D^{1/2}\right)\left(D^{1/2}X\right)
\]

\end_inset

where 
\begin_inset Formula $D$
\end_inset

 is a diagonal matrix of 
\begin_inset Formula $\left(\widehat{\epsilon}_{1}^{2},\widehat{\epsilon}_{2,}^{2},\ldots,\widehat{\epsilon}_{n}^{2}\right)$
\end_inset

.
